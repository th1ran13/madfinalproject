<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:elevation="8dp"
    android:layout_margin="13sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/qrImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/qrcode"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/qrImg"
            android:text="Movie Name"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/m_name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie Time"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@id/m_name"
            android:layout_toRightOf="@+id/qrImg"
            android:layout_marginLeft="15dp"
            android:id="@+id/m_time"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie Date"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@id/m_time"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/qrImg"
            android:layout_marginLeft="15dp"
            android:id="@+id/m_date"/>

        <LinearLayout
            android:layout_below="@id/m_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_edit1"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/radio_selected"
                android:text="EDIT" />

            <Button
                android:id="@+id/btn_delete1"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/radio_selected"
                android:text="DELETE" />

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>